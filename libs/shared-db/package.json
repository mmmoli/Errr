{
  "name": "@htch/shared-db",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "turso dev --db-file ./var/local.db -p 8082",
    "push": "bunx drizzle-kit push",
    "gen": "bunx drizzle-kit generate",
    "migrate": "bunx drizzle-kit migrate",
    "studio": "bunx drizzle-kit studio"
  },
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts",
      "default": "./src/index.ts"
    },
    "./package.json": "./package.json"
  },
  "dependencies": {
    "@libsql/client": "^0.15.1",
    "drizzle-orm": "^0.41.0"
  },
  "devDependencies": {
    "drizzle-kit": "^0.30.5"
  },
  "nx": {
    "targets": {
      "push": {
        "cwd": "{projectRoot}"
      },
      "gen": {
        "cwd": "{projectRoot}"
      },
      "migrate": {
        "cwd": "{projectRoot}"
      }
    }
  }
}
